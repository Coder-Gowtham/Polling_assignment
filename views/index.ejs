<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Poll & Chat</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">

        <div id="poll" class="section pollSection">
            <h1 id="poll-heading">Poll</h1>
            <h2 id="question">Which is your favourite Programming Language?</h2>
            <div class="container options-container">
                <form id="pollForm" onsubmit="submitVote(event)">
                    <!-- EJS loop to dynamically generate poll options -->
                    <% options.forEach((option)=> { %>
                        <div class="radio-buttons bur">
                            <input type="radio" class="btn-check" name="pollOption" value="<%= option.id %>"
                                id="btnradio<%= option.id %>" autocomplete="off">
                            <label class="btn btn-outline-primary" for="btnradio<%= option.id %>">
                                <%= option.options %> (<span id="count<%= option.id %>">
                                        <%= option.vote_count %>
                                    </span> votes)
                            </label>
                        </div>
                        <% }) %>

                            <input type="hidden" name="username" value="<%= username %>">

                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="submit" class="btn btn-primary">Vote</button>
                            </div>
                </form>
            </div>
        </div>



        <div id="chat" class="section chatSection">
            <h2>Chat</h2>
            <div id="chatMessages"></div>
            <input id="messageInput" type="text" placeholder="Type a message..." oninput="showTyping()">
            <button type="button" class="btn btn-success send-btn " onclick="sendMessage(`<%= username %>`)">Send
            </button>
            <div id="typingIndicator"></div>
        </div>
    </div>

    <!-- Include Socket.IO library -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/script.js"></script>
</body>

</html>